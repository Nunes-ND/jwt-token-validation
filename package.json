{
	"name": "jwt-token-validation",
	"version": "1.0.0",
	"description": "Simple api to validate jwt token",
	"main": "/dist/main.js",
	"scripts": {
		"start": "node dist/main.js",
		"dev": "tsx watch --env-file .env src/main.ts",
		"build": "tsc -p tsconfig.prod.json",
		"lint": "biome lint --write",
		"format": "biome format --write",
		"check": "biome check --write --unsafe",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:unit": "vitest run unit",
		"test:integration": "vitest run integration",
		"db:push": "drizzle-kit push --config ./drizzle.config.ts",
		"db:generate": "drizzle-kit generate --config ./drizzle.config.ts",
		"db:migrate": "drizzle-kit migrate --config ./drizzle.config.ts",
		"db:seed": "tsx --env-file .env drizzle/seeds/index.ts",
		"prepare": "husky"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Nunes-ND/jwt-token-validation.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"type": "commonjs",
	"bugs": {
		"url": "https://github.com/Nunes-ND/jwt-token-validation/issues"
	},
	"homepage": "https://github.com/Nunes-ND/jwt-token-validation#readme",
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@fastify/swagger": "^9.5.1",
		"@fastify/swagger-ui": "^5.2.3",
		"@types/better-sqlite3": "^7.6.13",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^24.2.1",
		"drizzle-kit": "^0.31.4",
		"husky": "^9.1.7",
		"pino-pretty": "^13.1.1",
		"tsx": "^4.20.4",
		"typescript": "^5.9.2",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@fastify/cors": "^11.1.0",
		"better-sqlite3": "^12.2.0",
		"drizzle-orm": "^0.44.4",
		"fastify": "^5.5.0",
		"fastify-type-provider-zod": "^5.0.3",
		"jsonwebtoken": "^9.0.2",
		"zod": "^4.0.17"
	}
}
